@model Article

<h2>Create Article</h2>

<div class="main-form">
        <form asp-action="Create" asp-controller="Article">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group
">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Lead" class="control-label"></label>
                <input asp-for="Lead" class="form-control" />
                <span asp-validation-for="Lead" class="text-danger"></span>
            </div>

            
            <div       class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control">
                    @foreach (var author in ViewBag.Authors)
                    {
                        <option value="@author.Id">@author.FirstName @author.LastName</option>
                    }
                </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Positions</label>
                @foreach (var tag in ViewBag.Tags)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Tags" value="@tag.Id" id="tag-@tag.GetHashCode()" @(Model?.Tags?.Contains(tag) == true ? "checked" : "") />
                        <label class="form-check-label" for="tag-@tag.GetHashCode()">
                            @tag.Name
                        </label>
                    </div>
                }
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>