@model IEnumerable<Author>
 
<h2>Authors List</h2>
<p><a asp-action="Create">Add Author</a></p>
<table class="table">
     <tr><th>Id</th><th>First Name</th><th>Last Name</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
        </tr>
    }
</table>