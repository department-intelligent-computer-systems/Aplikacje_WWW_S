@model List<AWWW_lab1_gr1.Models.Article>

<h1>@ViewBag.Title</h1>

<p>Witamy na stronie głównej</p>

@if (Model != null)
{
    foreach (var article in Model)
    {
        <p>
            <div class="w3-card">
                <header class="w3-container w3-blue">
                    <h1>@article.Title</h1>
                    @if (@article.Author != null)
                    {
                        <h2>@(article.Author.FirstName + " " + article.Author.LastName)</h2>
                    }
                </header>

                <div class="w3-container">
                    <p>@article.Lead</p>
                    <p><a asp-controller="article" asp-action="index" asp-route-id="@article.Id">Czytaj dalej</a></p>
                </div>

                <footer class="w3-container w3-blue">
                    <h5>
                        @article.CreationDate.ToShortDateString()
                        @if(@article.Tags != null)
                        {
                            @foreach (var tag in @article.Tags)
                                @(tag.Name + " ")
                        }
                    </h5>
                </footer>
            </div>
        </p>
    }
}



