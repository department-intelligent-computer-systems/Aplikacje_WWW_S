@using AWWW_lab1_gr1.Models
@model League
 
<div>
    <h2>Add League</h2>
<form asp-action="create" asp-controller="leagues">
    <p>
        <label asp-for="Name">Name</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="Country">Country</label><br />
