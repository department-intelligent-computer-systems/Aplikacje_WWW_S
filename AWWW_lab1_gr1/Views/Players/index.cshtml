@model IEnumerable<Player>


<h2>Players List</h2>
<p><a class="add-btn" asp-action="Create">Add Player</a></p>
<table class="table">
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Birth Date</th>
        <th>Team</th>
        <th>Positions</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.BirthDate</td>

            <td>@item.Team.Name</td>
            <td>
                @foreach (var position in item.Positions)
                {
                    <span>@position.Name</span>
                }
            </td>
            <td>
                <a class="action-btn" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
            </td>
        </tr>
    }
</table>