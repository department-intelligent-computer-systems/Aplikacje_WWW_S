@model AWWW_lab1_gr1.Models.Team

<h2>Add team</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country" class="control-label"></label>
        <input asp-for="Country" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FoundingDate" class="control-label"></label>
        <input asp-for="FoundingDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <select asp-for="Id" class ="form-control" asp-items="ViewBag.LeagueList"></select>
    </div>
    <div class="form-group">
        <button type="submit" class="w3-btn w3-border">Dodaj</button>
    </div>
</form>