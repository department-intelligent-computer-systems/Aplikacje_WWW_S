@model AWWW_lab1_gr2.Models.Article

<div class="main">
    <div class="container">
        <div class="title">
            <h1>@ViewBag.Title</h1>
        </div>
        <div class="form">
            <form asp-controller="Article" asp-action="Edit">
                <input type="hidden" asp-for="ArticleId" value="@Model.ArticleId">

                <label asp-for="Title"></label>
                <input asp-for="Title" value="@Model.Title">
                <label asp-for="Content"></label>
                <input type="messagebox" asp-for="Content" value="@Model.Content">
                <label asp-for="CreationDate"></label>
                <input asp-for="CreationDate" value="@Model.CreationDate">
                <label asp-for="Author"></label>
                <select asp-for="AuthorId" asp-items="@ViewBag.Authors"></select>
                <label asp-for="Category"></label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
                <label asp-for="Tags"></label>
                <select name="selectedTagIds" asp-items="@ViewBag.Tags" multiple="multiple"></select>

                <input type="hidden" asp-for="Comments">
                <input type="hidden" asp-for="Match">

                <button type="submit">Zapisz</button>
            </form>
        </div>
    </div>
</div>