@model IEnumerable<AWWW_lab1_gr2.Models.Category>


<div class="main">
    <div class="container">
        <div class="title">
            <h1>@ViewBag.Title</h1>
        </div>
        <div class="authors">
            @foreach(var category in Model){
                <li>
                    <div asp-route-id="@category.CategoryId">@category.Name</div> 
                </li>
            }
        </div>
        <div class="addAuthor">
            <a asp-action="form" asp-controller="category">Dodaj kategorie</a>
        </div>
    </div>
</div>