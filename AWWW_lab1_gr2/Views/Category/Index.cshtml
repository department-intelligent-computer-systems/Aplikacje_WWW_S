@model ICollection<AWWW_lab1_gr2.Models.Category>;

<h1>Lista Kategorii</h1>

<ul>
    @foreach (AWWW_lab1_gr2.Models.Category cat in @Model){
        <li>Kategoria @cat.Id: <ul>
                <li>Nazwa: @cat.Name</li>
                <li>Artyku≈Çy: @if(cat.Articles != null) {cat.Articles.ToString();}</li>
                <li><a asp-controller="category" asp-action="Dodaj" asp-route-id="@cat.Id">Edytuj</a></li>
            </ul>
        </li>
    }
</ul>

<h3><a asp-controller="category" asp-action="Dodaj">Dodaj</a></h3>