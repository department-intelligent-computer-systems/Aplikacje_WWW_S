@model IEnumerable<AWWW_lab1_gr2.Models.League>


<div class="main">
    <div class="container">
        <div class="title">
            <h1>@ViewBag.Title</h1>
        </div>
        <div class="authors">
            @foreach(var league in Model){
                <li>
                    <div asp-route-id="@league.LeagueId">@league.LeagueId @league.Name @league.Country @league.Level 
                    </div> 
                    @if(league.Teams != null){
                        <select>
                            @foreach(var team in league.Teams){
                                <option>@team.Name</option>
                            }
                        </select>
                    }
                    <div class="deleteLeague">
                        <form asp-controller="League" asp-action="Delete">
                            <input type="hidden" name="id" value="@league.LeagueId">
                            <button type="submit" class="btnDelete">Usu≈Ñ</button>
                        </form>
                    </div>
                </li>
            }
        </div>
        <div class="addLeague">
            <a asp-action="form" asp-controller="League">Dodaj lige</a>
        </div>
    </div>
</div>