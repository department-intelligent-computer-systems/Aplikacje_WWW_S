@model IEnumerable<AWWW_lab1_gr2.Models.Player> 

<div class="main">
    <div class="container">
        <div class="title">
            <h1>@ViewBag.Title</h1>
        </div>
        <div class="lista lista-players">
            @foreach (var player in Model){
                <li>
                    <div class="list_item player" asp-route-id="@player.PlayerId">
                        @player.FirstName 
                        @player.LastName | 
                        @if(player.Team != null){
                            @($"Druzyna: {player.Team.Name} | ")
                        }
                        @if (player.Positions != null){
                            @($"Pozycje: ")
                            foreach (var pos in player.Positions){
                                @($"{pos.Name} | ")
                            }
                        }
                    </div>
                    <div class="deletePlayer">
                        <form asp-controller="Player" asp-action="Delete">
                            <input type="hidden" name="id" value="@player.PlayerId">
                            <button type="submit" class="btnDelete">Usu≈Ñ</button>
                        </form>
                    </div>
                     <div class="editPlayer">
                        @Html.ActionLink("Edit", "Edit", new {id = player.PlayerId})
                    </div>
                </li>
            }
        </div>
        <div class="addPlayer">
            <a asp-controller="Player" asp-action="Add">Dodaj zawodnika</a>
        </div>
    </div>
</div>



