@model AWWW_lab1_gr2.Models.Team

<h1>@ViewBag.Header</h1>

<form asp-action="dodaj" method="post">
    <p>
        <label asp-for="Name">Nazwa:</label>
        <input asp-for="Name"/>
    </p>
    <p>
        <label asp-for="Country">Państwo:</label>
        <input asp-for="Country"/>
    </p>
    <p>
        <label asp-for="City">Miasto:</label>
        <input asp-for="City"/>
    </p>
    <p>
        <label asp-for="FoundingDate">Data założenia:</label>
        <input asp-for="FoundingDate"/>
    </p>
    <p>
        <label asp-for="LeagueId">Liga:</label>
        <select asp-for="LeagueId" asp-items="@ViewBag.leagueList"></select>
    </p>
    <p>
        <button type="submit">@ViewBag.buttonText</button>
    </p>    
</form>