@model AWWW_lab1_gr2.Models.Team; 

<div class="main">
    <div class="container">
        <div class="title">
            <h1>@ViewBag.Title</h1>
            @if (ViewBag.Success == false){
                <script>
                    alert("Druzyna nie zostala dodana"); 
                </script>
            }
        </div>



        <div class="form form-team">
            <form asp-action="Add" asp-controller="Team">
                <label asp-for="Name"></label>
                <input asp-for="Name">
                <label asp-for="Country"></label>
                <input asp-for="Country">
                <label asp-for="City"></label>
                <input asp-for="City">
                <label asp-for="FoundingDate"></label>
                <input asp-for="FoundingDate">
                @* <input type="hidden" asp-for="LeagueId" /> *@
                <label asp-for="LeagueId"></label>
                @* <input asp-for="LeagueId"> *@
                <select asp-for="LeagueId" asp-items="@ViewBag.Leagues"></select>
                <input type="submit">
            </form>
        </div>
    </div>
</div>