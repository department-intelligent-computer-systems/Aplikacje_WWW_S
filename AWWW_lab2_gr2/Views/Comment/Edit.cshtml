@model AWWW_lab2_gr2.Models.Comment

@{
    ViewData["Title"] = "Edycja komentarza";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ArticleId" />
    <label asp-for="Title" class="control-label">Tytul komentarza:</label>
    <input asp-for="Title" class="form-control" />

    <label asp-for="Content" class="control-label">Tresc komentarza:</label>
    <input asp-for="Content" class="form-control" />

    <button type="submit" class="btn btn-primary">Zapisz zmiane</button>
</form>