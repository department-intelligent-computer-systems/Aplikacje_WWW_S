@model IEnumerable<AWWW_lab3_gr2.Models.Player>

<h1>Zawodnicy</h1>

<div class="w3-card">
    @foreach (var player in Model)
    {
        <div class="w3-container">
            <p>Id: @player.Id</p>
            <p>Imie: @player.FirstName</p>
            <p>Nazwisko: @player.LastName</p>
            <p>Kraj: @player.Country</p>
            <p>Data urodzenia: @player.BirthDate</p>
            <p>Pozycja: @string.Join(',', player.Position.Select(n => n.Name))</p>
            <p>Druzyna: @player.Team.Name</p>
            <a asp-controller="Player" asp-action="Update" asp-route-id="@player.Id">Edytuj</a>
        </div>
    }
</div>