@model IEnumerable<AWWW_lab3_gr2.Models.Team>

<h1>Druzyny</h1>

<div class="w3-card">
    @foreach (var team in Model)
    {
        <div class="w3-container">
            <p>ID: @team.Id</p>
            <p>@team.Name</p>
            <p>@team.Country</p>
            <p>@team.City</p>
            <p>@team.FoundingDate</p>
            <p>@team.League.Name</p>
            <p>
                @string.Join(",", team.Players.Select(a => a.FirstName + " " + a.LastName + " - " + (string.Join(",",
                         team.Players.SelectMany(a => a.Position.Select(b => b.Name))))))
            </p>
            <p>
                <a asp-controller="Team" asp-route-id="@team.Id" asp-action="Update">Edytuj</a>
            </p>
        </div>
    }
</div>
