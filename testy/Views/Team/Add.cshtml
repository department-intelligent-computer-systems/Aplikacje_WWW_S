        <label asp-for="Name">Nazwa: </label>
        <input type="text" asp-for="Name">
    </p>
    <p>
        <label asp-for="Country">Kraj: </label>
        <input type="text" asp-for="Country">
    </p>
    <p>
        <label asp-for="City">Miasto: </label>
        <input type="text" asp-for="City">
    </p>
    <p>
        <label asp-for="FoundingDate">Data za≈Çozenia: </label>
        <input type="date" asp-for="FoundingDate">
    </p>
